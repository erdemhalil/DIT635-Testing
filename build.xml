<?xml version="1.0" encoding="UTF-8"?>
<project name="Testing" basedir="." default="all">
	<property name="src.dir" value="CoffeeMaker/src" />
	<property name="build.dir" value="target" />
	<path id="classpath">
		<fileset dir="${src.dir}/main">
			<include name="*.java" />
		</fileset>
		<pathelement path="${build.dir}" />
	</path>
	<junit printsummary="yes" haltonfailure="yes">
		<classpath>
			<path refid="classpath" />
			<fileset dir=".">
				<include name="**/junit.jar" />
			</fileset>
		</classpath>
	</junit>
	<target name="all" depends="build, clean">
	</target>
	<target name="build">
		<mkdir dir="${build.dir}" />
		<javac destdir="${build.dir}" source="1.7" target="1.7">
			<src path="${src.dir}" />
			<classpath refid="classpath" />
		</javac>
	</target>
	<target name="clean">
		<delete>
			<fileset dir="${build.dir}">
				<include name="**/*.class" />
			</fileset>
		</delete>
	</target>
	<target name="Compile">
	</target>
</project>
